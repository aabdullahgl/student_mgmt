<%= form_with(model: [:admin,student]) do |form| %>

    <% if student.errors.any? %>
        <div style="color: red">
            <h2>
                <%= pluralize(student.errors.count, "error" ) %> prohibited this course from being saved:
            </h2>

            <ul>
                <% student.errors.each do |error| %>
                    <li>
                        <%= error.full_message %>
                    </li>
                    <% end %>
            </ul>
        </div>
        <% end %>

            <div class="form-group">
                <%= form.label :first_name %> <br>
                    <%= form.text_field :first_name, class: "form-control form-control-lg" %>
            </div>

            <div class="form-group">
                <%= form.label :last_name %> <br>
                    <%= form.text_field :last_name , class: "form-control form-control-lg"%>
            </div>

            <div class="form-group">
                <%= form.label :email %> <br>
                    <%= form.email_field :email ,class: "form-control form-control-lg"%>
            </div>

            <div class="form-group">
                <%= form.label :adress %> <br>
                    <%= form.text_field :adress,class: "form-control form-control-lg" %>
            </div>

            <div class="form-group">
                <%= form.label :date_of_birth %> <br>
                    <%= form.date_field :date_of_birth,class: "form-control form-control-lg" %>
            </div>

            <div class="form-group">
                <%= form.label :contact %> <br>
                    <%= form.telephone_field :contact,class: "form-control form-control-lg" %>
            </div>

            <div class="form-group">
                <% if @student.profile_image.attached? %>
                    <%= image_tag @student.profile_image, style: "width: 200px; display: block;" %>
                <% end %>
                <%= form.label :profile_image %> <br>
                    <%= form.file_field :profile_image, class: "form-control form-control-lg" %>
            </div>
            <br>
            <div class="form-group">
                <%= form.submit class: "btn btn-primary btn-lg" %>
            </div>
<% end %>
