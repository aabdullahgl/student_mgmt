<div class="col-lg-10">
    <p>
        <%= notice %>
    </p>

    <div class="card rounded-4 shadow">
        <div class="card-body">
            <% if @student.profile_image.attached? %>
                <%= image_tag @student.profile_image %>
                    <% else %>
                        <p>No profile image available</p>
                        <% end %>

                            <h1>Student Details</h1>

                            <p><strong>Name: </strong>
                                <%= @student.full_name %>
                            </p>

                            <!-- <p><strong>First Name: </strong>
    <%= @student.first_name %>
</p>
<p><strong>Last Name: </strong>
    <%= @student.last_name %>
</p> -->
                            <p><strong>Email: </strong>
                                <%= @student.email %>
                            </p>
                            <p><strong>Adres: </strong>
                                <%= @student.adress %>
                            </p>

                            <% if @student.date_of_birth.present? %>
                                <p><strong>Date Of Birth: </strong>
                                    <%= formatted_date(@student.date_of_birth) %>
                                </p>
                                <% end %>



                                    <p><strong>Age: </strong>
                                        <%= @student.age %>
                                    </p>

                                    <%= link_to 'Back' , admin_students_path, class: "btn btn-primary" %> |
                                        <%= link_to 'Edit' , edit_admin_student_path(@student),
                                            class: "btn btn-secondary" %>

        </div>
    </div>

</div>
