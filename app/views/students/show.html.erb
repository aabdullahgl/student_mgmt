<div class="col-lg-10">
    <p>
        <%= notice %>
    </p>

    <div class="card rounded-4 shadow">
        <div class="card-body">
            <h1>Student Details</h1>

    <p><strong>Name: </strong>
        <%= @student.full_name %>
    </p>

    <!-- <p><strong>First Name: </strong>
    <%= @student.first_name %>
</p>
<p><strong>Last Name: </strong>
    <%= @student.last_name %>
</p> -->
    <p><strong>Email: </strong>
        <%= @student.email %>
    </p>
    <p><strong>Adres: </strong>
        <%= @student.adress %>
    </p>

    <% if @student.date_of_birth.present? %>
        <p><strong>Date Of Birth: </strong>
            <%= formatted_date(@student.date_of_birth) %>
        </p>
        <% end %>



            <p><strong>Age: </strong>
                <%= @student.age %>
            </p>

            <%= link_to 'Back' , students_path, class: "btn btn-primary"%> |
                <%= link_to 'Edit' , edit_student_path(@student), class: "btn btn-secondary" %>

        </div>
      </div>

</div>
